<%= semantic_form_for @topic do |f| %>

  <% if @topic.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-10">
      <%= f.inputs do %>
        <%= f.input :title %>
        <%= f.input :content%>
        <%= f.input :kind, as: :select, collection: Topic.kinds.keys.to_a, include_blank: false %>
      <% end %>

      <%= f.actions do %>
        <%= f.action :submit, :as => :button %>
        <%= f.action :cancel, :as => :link %>
      <% end %>
    </div>
  </div>
<% end %>
